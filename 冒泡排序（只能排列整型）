#include<stdio.h>
int main()
{
   int arr[5]={1,2,3,4,5};
   int sz=sizeof(arr)/sizeof(arr[0]);
   bub(arr,sz);
   for(int i=0;i<sz,i++)
   {
       printf("%d",arr[i]);
   }
   return 0;
}
void bub(int arr[],int sz)
{
    for(int i=0;i<=sz-1;i++)//一次冒泡排序
	{                        
		for(int j=0;j<=sz-1-i;j++)
		{
			if(a[j]<a[j+1])//逆序交换大小，此为从大到小排列
			{
			a[j]=a[j]+a[j+1];
			a[j+1]=a[j]-a[j+1];
			a[j]=a[j]-a[j+1];//加减交换程序
			}
		}
	}
}
