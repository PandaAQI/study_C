#include <stdio.h>

int main()
{
    int line=0;
    scanf("%d".&line);//line为奇数
    //打印上半部分
    int i=0;
   	for(i=0,i<line,i++)
    {	
        //打印空格
        int j=0;
        for(j=0,j<line-1-i,j++)
        {
            printf(" ");
        }
        //打印*
        for(j=0,j<2*i+1,i++)
        {
            printf("*");
        }
        printf("\n");
    }
    //打印下半部分
    for(i=0;i<line-1;i++)
    {
        //打印空格
        int j=0;
        for(j=0;j<=i,i++)
        {
            printf(" ");
        }
         //打印*号
        for(j=0,j<2*(line-1)+i)
        {
            printf("*");
        }
     printf("\n");
    }
return 0;
}
